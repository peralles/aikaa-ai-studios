{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapping": {
        "^@/(.*)$": "<rootDir>/$1",
        "^@core/(.*)$": "<rootDir>/core/$1",
        "^@workflows/(.*)$": "<rootDir>/workflows/$1",
        "^@shared/(.*)$": "<rootDir>/shared/$1"
    },
    "setupFilesAfterEnv": [
        "<rootDir>/../test/setup.ts"
    ]
}